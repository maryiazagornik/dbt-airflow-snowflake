[sqlfluff]
dialect = snowflake
templater = dbt
runaway_limit = 10
max_line_length = 120
exclude_rules = CP01,CP02,ST06,LT05

[sqlfluff:templater:dbt]
project_dir = .
profiles_dir = .
profile = snowflake_analytics
target = dev

[sqlfluff:indentation]
tab_space_size = 4

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = trailing